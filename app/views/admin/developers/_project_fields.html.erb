<div class="nested-fields">
  <div class="row">
    <div class="col-12">
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, id: :project_title, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :duration %>
                <%= f.text_field :duration, id: :project_duration, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :role %>
                <%= f.text_field :role, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :url %>
                <%= f.text_field :url, id: :project_url, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :link_to_git_Repo %>
                  <%= f.text_field :link_to_git_Repo, id: :link_to_git_Repo, class: "form-control" %>
                </div>
              </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, id: :project_description, 'data-provider': :summernote, class: "form-control", rows: "10" %>
              </div>
            </div>
          </div>
          <div class="actions">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to_remove_association "Remove", f , class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>  
  </div>
</div>