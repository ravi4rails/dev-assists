<div class="nested-fields">
  <div class="row">
   <div class="col-md-8 mx-md-auto">
       <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, id: :project_title, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :duration %>
                  <%= f.text_field :duration, id: :project_duration, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :role %>
                  <%= f.text_field :role, id: :project_role, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :url %>
                  <%= f.text_field :url, id: :project_url, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :developer_id %>
                  <%= f.select :developer_id, options_for_select(developer_list, selected: developer_list), { include_blank: "Select Developer" }, { class: "form-control", required: true } %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :description %>
                  <%= f.text_area :description, id: :project_description, 'data-provider': :summernote, class: "form-control", rows: "20" %>
                </div>
              </div>
            </div>
            <div class="actions">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          </div>
       </div>
      <%= link_to_remove_association "Remove", f , class: "btn btn-danger", style: "margin-top: 26% !important;"%>
   </div> 
    
  
  </div>
</div>