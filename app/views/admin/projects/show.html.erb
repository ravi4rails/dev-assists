<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 mx-md-auto">
      <div class="card mt-5 mb-5">
        <div class="card-body">
          <p>
            <strong>Title:</strong>
            <%= @project.title %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @project.description %>
          </p>

          <p>
            <strong>Duration:</strong>
            <%= @project.duration %>
          </p>

          <p>
            <strong>Role:</strong>
            <%= @project.role %>
          </p>

          <p>
            <strong>Url:</strong>
            <%= @project.url %>
          </p>

          <p>
            <strong>Developer:</strong>
            <%= @project.developer.first_name %>
          </p>

          <%= link_to 'Edit', edit_admin_project_path(@project), class: "btn btn-info" %> |
          <%= link_to 'Back', admin_projects_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>