<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="text-center">Projects</h1>
<div class="table-responsive mt-4">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Duration</th>
          <th>Role</th>
          <th>Url</th>
          <th>Developer</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
      </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.duration %></td>
        <td><%= project.role %></td>
        <td><%= project.url %></td>
        <td><%= project.developer %></td>
        <td><%= link_to 'Show', admin_project_path(project) %></td>
        <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
        <td><%= link_to 'Destroy', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Project', new_admin_project_path, class: "btn btn-primary" %>
</div>
