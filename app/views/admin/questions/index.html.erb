<div class="container">
 <div class="table-responsive mt-4">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td> <%= link_to 'Show', admin_question_path(question),class: "btn btn-success" %></td>
        <td>     <%= link_to 'Edit', edit_admin_question_path(question), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger"  %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Question', new_admin_question_path, class: "btn btn-primary"%>
</div> 
</div> 