<h2 class="text-center mt-5 mb-5">Sign up</h2>
<div class="form-blok-area">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="d-flex">
      <div class="flex-grow-1">
        <div class="card p-3 shadow custom-card">
          <div class="card-title text-muted font-12">ACCOUNT DETAILS</div>
          <div class="card-body">
            <div class="row mb-3">
              <div class="col-md-4 text-muted">
                <%= f.text_field :first_name, class: "form-control font-12", style: "padding: 25px;", placeholder: "First-Name" %>
              </div>
              <div class="col-md-4 text-muted"> 
                <%= f.text_field :last_name, class: "form-control font-12", style: "padding: 25px;", placeholder: "Last-Name" %>
              </div>
              <div class="col-md-4">
                <div class="custom-line-hight text-muted">
                  <small class="">Already have an account?<br><%= link_to "Log In", new_developer_session_path, class: "font-weight-bold font-12"%></small>
                </div>
              </div> 
            </div>
            <div class="row">
              <div class="col-md-8">
                <div class="form-group text-muted">
                  <%= f.email_field :email, autocomplete: "email", class: "form-control font-12",  style: "padding: 25px;", placeholder: "Email" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-4">
                <div class="form-group text-muted">
                  <%= f.text_field :contact_number, class: "form-control font-12",  style: "padding: 25px;", placeholder: "Phone-Number"  %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group text-muted">
                  <div class="custom-control custom-checkbox mt-3 text-dark">
                   <!--  <input type="checkbox" class="custom-control-input" id="customCheck" name="example1">
                    <label class="custom-control-label font-weight-bold text-dark font-12" for="customCheck">Text me leads</label> -->
                  </div>
                </div>
              </div>
            </div>
            <div class="row border-top">
              <div class="col-md-8 mt-3">
                <div class="text-muted mb-4 font-12">CREATE PASSWORD</div>
                <div class="form-group text-muted">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control font-12", placeholder: "Password", style: "padding: 25px;" %>
                </div>
              </div>
              <div class="col-md-8">
                <div class="form-group text-muted">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control font-12", placeholder: "Confirm Password", style: "padding: 25px;" %>
                </div>
              </div>
              <div class="col-md-8">
                <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="ml-2">
        <div class="card rounded-0 border-dark text-muted">
          <i class="fa fa-lightbulb-o"></i>
        </div> 
      </div>
    </div>
  <%end%>
</div>

<style type="text/css">
  .custom-card{width: 50rem;}
  .custom-line-hight{
        line-height: 15px;
  }
  .custom-checkbox .custom-control-input:checked ~ .custom-control-label::before{
        background-color: #000;
  }
  .i{color: #ffffff;
    background-color: #218890;
    border: 4px solid #99dde3;
    border-radius: 50%;
    font-size: 2.2em;
    padding: 3px;
    margin-right: 10px;
    float: left;}
</style>





